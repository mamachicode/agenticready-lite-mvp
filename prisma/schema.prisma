generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/root/projects/agenticready-lite-mvp/prisma/prisma/dev.db"
}

model Order {
  id               String   @id @default(cuid())
  stripeSessionId  String   @unique
  email            String
  amount           Int
  currency         String
  status           String
  createdAt        DateTime @default(now())

  reportS3Key      String?
  reportUploadedAt DateTime?
}

model StripeEvent {
  id        String   @id
  type      String
  processed Boolean  @default(false)
  createdAt DateTime @default(now())
}
