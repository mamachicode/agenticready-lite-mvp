generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id              String   @id @default(cuid())
  email           String
  status          String
  stripeSessionId String
  amount          Int
  currency        String
  reportS3Key     String?      // uploaded PDF S3 key
  fulfilledAt     DateTime?
  createdAt       DateTime @default(now())
}
