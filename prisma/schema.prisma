generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Order {
  id               String   @id @default(cuid())
  stripeSessionId  String   @unique
  email            String
  amount           Int
  currency         String
  status           String   @default("PENDING")
  reportS3Key      String?
  createdAt        DateTime @default(now())
}

model StripeEvent {
  id        String   @id
  type      String
  payload   String
  createdAt DateTime @default(now())
}
